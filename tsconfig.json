 {
      "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react-jsx",
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
      },
      "include": ["src/**/*", "webpack.config.js"],
      "exclude": ["node_modules", "dist"]
}
